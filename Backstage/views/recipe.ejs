<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>後台</title>
    <link rel="stylesheet" href="/backstage.css" />
    <script src="/Backstage/jquery/jquery-3.7.1.min.js"></script>
  </head>

  <body>
    <%- include('btn_group') %>

    <div class="table_setting">
      <table>
        <thead>
          <tr>
            <th style="width: 5%;">選取</th>
            <th style="width: 5%;">編號</th>
            <th style="width: 10%;">圖片</th>
            <th style="width: 20%;">標題</th>
            <th>風格</th>
            <th>關聯</th>
            <th>點閱量</th>
            <th style="width: 20%;">動作</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(recipe) { %>
          <tr>
            <td>
              <input
                type="checkbox"
                name="recipe"
                value="<%= recipe.recipe_uid %>"
              />
            </td>
            <td><%= recipe.recipe_uid %></td>
            <td>
              <div class="container">
                <img src="/../img/recipe/recipe<%= recipe.recipe_uid %>.jpg" />
              </div>
            </td>

            <td>
              <a href="/recipe/<%= recipe.recipe_uid %>" target="_blank">
                <%= recipe.recipe_title %>
              </a>
            </td>
            <td><%= recipe.style_name %></td>
            <td><%= recipe.related_name %></td>
            <td><%= recipe.click %></td>
            <td class="table_btn_group">
              <a
                class="btn"
                href="/recipe/<%= recipe.recipe_uid %>"
                class="button"
                target="_blank"
                >詳細資訊</a
              >
              <button value="edit">編輯</button>
              <button value="del">刪除</button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <%- include('footer') %>
  </body>
</html>
