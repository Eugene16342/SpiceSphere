<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>後台</title>
    <link rel="stylesheet" href="/backstage.css" />
    <script src="/Backstage/jquery/jquery-3.7.1.min.js"></script>
  </head>

  <body>
    <%- include('btn_group') %>

    <div class="table_setting">
      <table>
        <thead>
          <tr>
            <th>選取</th>
            <th>編號</th>
            <th>圖片</th>
            <th>名稱</th>
            <th>價格</th>
            <th>存貨數量</th>
            <th>銷量</th>
            <th>點閱量</th>
            <th>銷售比</th>
            <th>關聯</th>
            <th>動作</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(function(product) { %>
          <tr>
            <td>
              <input
                type="checkbox"
                name="product"
                value="<%= product.product_uid %>"
              />
            </td>
            <td><%= product.product_uid %></td>
            <td>
              <div class="container">
                <img
                  src="/../img/product/product<%= product.product_uid %>.jpg"
                />
              </div>
            </td>
            <td>
              <a target="_blank" href="/product/<%= product.product_uid %>"
                ><%= product.product_title %></a
              >
            </td>
            <td><%= product.price %></td>
            <td><%= product.inventory %></td>
            <td><%= product.sales_amount %></td>
            <td><%= product.click %></td>
            <td>
              <%= product.click > 0 ? ((product.sales_amount / product.click) *
              100).toFixed(2) + '%' : 'N/A' %>
            </td>
            <td><%= product.related_name %></td>
            <td class="table_btn_group">
              <a
                class="btn"
                href="/product/<%= product.product_uid %>"
                class="button"
                target="_blank"
                >詳細資訊</a
              >
              <button value="edit">編輯</button>
              <button value="del">刪除</button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <%- include('footer') %>
  </body>
</html>
